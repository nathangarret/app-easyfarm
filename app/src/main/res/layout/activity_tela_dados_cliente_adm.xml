<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_DadosClienteADM">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/verde"
        android:title="@string/toolbar"
        app:titleTextColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados ADM"
        android:fontFamily="@font/mulishdois"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/white">
    </TextView>

    <RelativeLayout
        android:id="@+id/grid_quadrado"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="50dp">

        <ImageView
        android:background="@color/verde_login"
        android:layout_width="175dp"
        android:layout_height="175dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/mulishdois"
            android:text="ADM'S"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/qntcup_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:textSize="35sp"
            android:text="0"
            android:layout_marginStart="75sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_marginStart="175dp"
        android:background="@color/laranja_kbm"
        android:layout_width="175dp"
        android:layout_height="175dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUPONS"
            android:layout_marginStart="195dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/mulishdois"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/qntadm_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="255sp"
            android:layout_marginTop="75dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
        android:background="@color/vrd_rl"
        android:layout_width="175dp"
        android:layout_height="175dp"
            android:layout_marginTop="175dp"/>

        <ImageView
            android:layout_marginTop="175dp"
            android:layout_marginStart="175dp"
        android:background="@color/verde"
        android:layout_width="175dp"
        android:layout_height="175dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUPONS UTILIZADOS"
            android:layout_marginStart="195dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/mulishdois"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/qntcuputlz_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="255sp"
            android:layout_marginTop="255dp"
            android:fontFamily="@font/mulishdois"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/mulishdois"
            android:text="VENDAS/COMPRAS"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/qntvendas_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/mulishdois"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_marginTop="255dp"
            android:layout_marginStart="75dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Cupom"
        android:fontFamily="@font/mulishdois"
        android:layout_below="@+id/grid_quadrado"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/criarcupom_adm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@color/verde"
        android:layout_below="@id/grid_quadrado"
        android:layout_marginTop="30dp"
        android:layout_marginStart="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar um ADM"
        android:fontFamily="@font/mulishdois"
        android:layout_below="@+id/grid_quadrado"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="75dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/add_adm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@color/verde"
        android:layout_below="@id/grid_quadrado"
        android:layout_marginTop="80dp"
        android:layout_marginStart="335dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_toolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>