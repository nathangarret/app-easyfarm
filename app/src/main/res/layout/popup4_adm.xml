<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:padding="15dp">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tit_cupom4_adm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:fontFamily="@font/mulishdois"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc_cupom4_adm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/mulishdois"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/expirasse_coupom4_adm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:fontFamily="@font/mulishdois"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/coupon_ue_adm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expirasse_coupom4_adm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reedem_btn_ue_adm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/coupon_ue_adm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/verde"
        android:fontFamily="@font/mulishdois"
        android:text="Resgatar CÃ³digo"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/close_btn_ue"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="605dp"
        android:background="@color/verde"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_close_24" />
</RelativeLayout>