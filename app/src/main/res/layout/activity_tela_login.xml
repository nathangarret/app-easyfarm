<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/logo_colorida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/mulishdois"
        android:padding="5dp"
        android:text="asyFarm"
        android:textColor="@color/black"
        android:textSize="65dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_email_login"
        style="@style/Edit_text"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:drawableRight="@drawable/emailzx"
        android:fontFamily="@font/mulishdois"
        android:hint="Email"
        android:maxLength="50"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edit_senha_login"
        style="@style/Edit_text"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:drawableRight="@drawable/lock"
        android:fontFamily="@font/mulishdois"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:maxLength="40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign"
        style="@style/button_dados"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:fontFamily="@font/mulishdois"
        android:text="Entrar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mulishdois"
        android:text="Esqueceu a senha?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_forgetpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mulishdois"
        android:text="NÃ£o possui o login? Cadastra-se pelo nosso site !"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />
</RelativeLayout>
