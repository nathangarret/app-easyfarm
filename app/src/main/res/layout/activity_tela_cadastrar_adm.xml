<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_CadastrarADM">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/verde"
        android:title="@string/toolbar"
        app:titleTextColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar ADM"
        android:fontFamily="@font/mulishdois"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/white">
    </TextView>

    <ImageView
        android:id="@+id/voltar_adm"
        android:layout_width="115px"
        android:layout_height="115px"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/txt_cads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/mulishdois"
            android:text="Cadastrar ADM"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/tit_nomeadm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_cads"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mulishdois"
                android:text="Nome"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_nomeadm"
                style="@style/Edit_text"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_below="@id/tit_nomeadm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tit_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nomeadm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mulishdois"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_adm"
            style="@style/Edit_text"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_below="@id/tit_nome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/tit_senha"
            android:textColor="@color/black"
            android:layout_below="@id/txt_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mulishdois"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Senha"
            />

        <EditText
            android:id="@+id/txt_senha"
            style="@style/Edit_text"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_below="@id/tit_senha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cadastrar_adm"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_below="@id/txt_senha"
            android:text="Cadastrar"
            style="@style/button_dados"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_toolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>