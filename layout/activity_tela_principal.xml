<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Principal"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/verde"
                android:title="@string/toolbar"
                app:titleTextColor="@color/white" />

        <ImageView
            android:layout_width="115px"
            android:layout_height="115px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_branca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/mulishdois"
            android:text="asyFarm"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/search_myaccount"
            android:layout_width="125px"
            android:layout_height="125px"
            android:layout_marginStart="355dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/user"
            android:background="@color/verde"
            android:src="@drawable/ic_baseline_account_circle_24_white"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_myaccount"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1075dp">

                <HorizontalScrollView
                    android:id="@+id/hrz_principal"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="125dp"
                        android:layout_marginTop="15dp"
                        android:columnCount="6"
                        android:rowCount="5">

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/servicos" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_row="0"
                            android:layout_rowWeight="2"
                            android:layout_column="2"
                            android:layout_columnWeight="2"
                            android:layout_gravity="fill"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/terrenos" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_row="0"
                            android:layout_rowWeight="3"
                            android:layout_column="3"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/animal" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_row="0"
                            android:layout_rowWeight="4"
                            android:layout_column="4"
                            android:layout_columnWeight="4"
                            android:layout_gravity="fill"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/boiada" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_row="0"
                            android:layout_rowWeight="5"
                            android:layout_column="5"
                            android:layout_columnWeight="5"
                            android:layout_gravity="fill"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/produtos" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/hrz_principal"
                    android:id="@+id/txt_melhorescupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulishdois"
                    android:padding="15dp"
                    android:text="@string/melhores_cupons"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@+id/txt_melhorescupons"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_todos"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/des"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/img_right"
                    android:layout_marginTop="20dp"
                    android:background="@color/verde" />

                <TextView
                    android:id="@+id/desconto_dez"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/des"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mulishdois"
                    android:padding="15dp"
                    android:text="R$5 de Desconto"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:layout_below="@+id/des"
                    android:layout_marginStart="365dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/verde"
                    android:src="@drawable/ic_baseline_arrow_forward_24" />

                <TextView
                    android:id="@+id/desconto_quinze"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/desconto_dez"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mulishdois"
                    android:padding="15dp"
                    android:text="R$10 de Desconto"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:layout_below="@+id/desconto_dez"
                    android:layout_marginStart="365dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/verde"
                    android:src="@drawable/ic_baseline_arrow_forward_24" />

                <TextView
                    android:id="@+id/desconto_vinte"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/desconto_quinze"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mulishdois"
                    android:padding="15dp"
                    android:text="R$15 de Desconto"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:layout_below="@+id/desconto_quinze"
                    android:layout_marginStart="365dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/verde"
                    android:src="@drawable/ic_baseline_arrow_forward_24" />

                <TextView
                    android:id="@+id/desconto_vinte5"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_below="@+id/desconto_vinte"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mulishdois"
                    android:padding="20dp"
                    android:text="R$20 de Desconto"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/vinte5"
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:layout_below="@+id/desconto_vinte"
                    android:layout_marginStart="365dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/verde"
                    android:src="@drawable/ic_baseline_arrow_forward_24" />

                <View
                    android:id="@+id/linha_blhrz"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/vinte5"
                    android:layout_marginTop="20dp"
                    android:background="@color/verde" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linha_blhrz"
                    android:columnCount="2"
                    android:padding="15dp"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="125dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/kbm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="125dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/amazon_card"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/amazon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="125dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/adidas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="125dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/ubereats"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="125dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="0"
                        android:layout_gravity="fill"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/nike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="0"
                        android:layout_gravity="fill"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:src="@drawable/logo_colorida" />

                            <RelativeLayout
                                android:layout_width="185dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/verde">

                                <TextView
                                    android:id="@+id/trivago"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/mulishdois"
                                    android:padding="5dp"
                                    android:text="Resgatar!"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </RelativeLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nav2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/menu_toolbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
</RelativeLayout>