<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:padding="15dp">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tit_cupom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:fontFamily="@font/mulishdois"
        android:text="Cupom EasyFarm"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc_cupom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="305dp"
        android:fontFamily="@font/mulishdois"
        android:text="Este cupom irá descontar R$5 reais da sua compra."
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/expirasse_cupom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:fontFamily="@font/mulishdois"
        android:text="Cupom Expira em 2022-07-22"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/cupom"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/expirasse_cupom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="LKIOU32N"
        android:textAlignment="center"
        android:textColor="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reedem_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cupom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/verde"
        android:fontFamily="@font/mulishdois"
        android:text="Resgatar Código"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="585dp"
        android:background="@color/verde"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_close_24" />
</RelativeLayout>