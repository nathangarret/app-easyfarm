<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Suporte">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/verde"
        android:title="@string/toolbar"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/titulo_meajuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suporte Ao Cliente"
        android:fontFamily="@font/mulishdois"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/white">
    </TextView>

    <ImageView
        android:id="@+id/back_sup"
        android:layout_width="115px"
        android:layout_height="115px"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:background="@color/verde"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <ImageView
        android:id="@+id/email_sup"
        android:layout_width="125px"
        android:layout_height="125px"
        android:src="@drawable/ic_email_24"
        android:background="@color/verde"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="45dp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:id="@+id/txt_titulosup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail de contato \nVocê pode entrar em contato tambem pelo e-mail:"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mulishdois"
        android:textSize="15sp"
        android:layout_marginStart="225dp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="easyfarm.suporte@gmail.com"
        android:textStyle="bold"
        android:layout_below="@id/txt_titulosup"
        android:layout_marginStart="112dp"/>


    <ImageView
        android:id="@+id/phone_call"
        android:layout_below="@id/txt_titulosup"
        android:layout_width="125px"
        android:layout_height="125px"
        android:src="@drawable/ic_baseline_phone_24"
        android:background="@color/verde"
        android:layout_marginTop="55dp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:id="@+id/txt_saq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone SAC
        Segunda à sábado das 8:00 às 20:00
        Horário de Brasília (UTC -3)"
        android:layout_below="@id/txt_titulosup"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mulishdois"
        android:textSize="15sp"
        android:layout_marginStart="225dp"/>

    <ImageView
        android:id="@+id/copiar_email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/txt_titulosup"
        android:src="@drawable/ic_baseline_content_copy_24"
        android:layout_marginStart="310dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_toolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>